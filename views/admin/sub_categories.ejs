<%- include("header") -%>
<div class="admin-content-container">
    <h2 class="admin-heading">All Sub Category</h2>
    <a class="add-new pull-right" href="add-sub-category">Add New</a>
    <% if(product_subcategories.length){ %>
        <table class="table table-striped table-hover table-bordered">
            <thead>
            <th>Title</th>
            <th>Category</th>
            <th>Creation Date</th>
            <th>Show in Header</th>
            <th>Show in Footer</th>
            <th>Action</th>
            </thead>
            <tbody>
            <% product_subcategories.forEach(function(item) { %>
                <tr>
                    <td><%- item.sub_category %></td>
                    <td><%- item.category_id.category_name %></td>
                    <td><%- item.created_at.toLocaleString("nl-NL",{year:'numeric',
                        month: '2-digit' , day: '2-digit' , hour: '2-digit', minute: '2-digit', second: '2-digit'}) %></td>
                    <td>
                    <?php if($row['show_in_header'] == '1'){ ?>
                        <input type="checkbox" class="toggle-checkbox showCat_Header" data-id="<?php echo $row['sub_cat_id'];  ?>" checked />
                    <?php }else{ ?>
                        <input type="checkbox" class="toggle-checkbox showCat_Header" data-id="<?php echo $row['sub_cat_id'];  ?>" />
                    <?php } ?>
                    </td>
                    <td>
                    <?php if($row['show_in_footer'] == '1'){ ?>
                        <input type="checkbox" class="toggle-checkbox showCat_Footer" data-id="<?php echo $row['sub_cat_id'];  ?>" checked />
                    <?php }else{ ?>
                        <input type="checkbox" class="toggle-checkbox showCat_Footer" data-id="<?php echo $row['sub_cat_id'];  ?>" />
                    <?php } ?>
                    </td>
                    <td>
                        <a href="edit-sub-category?id=<%- item._id %>"><i class="fa fa-edit"></i></a>
                        <a style="margin-left: 10px;" class="delete_subCategory" href="javascript:void(0);" data-id="<%- item._id %>"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    <% }else{ %>
        <div class="not-found">!!! No Sub Categories Available !!!</div>
    <%    }  %>
    <div class="pagination-outer">
    </div>
</div>
<%- include("footer") -%>