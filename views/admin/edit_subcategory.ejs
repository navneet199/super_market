<%- include("header") -%>
        <div class="admin-content-container">
            <h3 class="admin-heading">Update Sub Category</h3>
                    <div class="row">
                        <!-- Form -->
                        <form id="updateSubCategory" class="add-post-form col-md-6" method ="POST">
                            <input type="hidden" name="sub_cat_id" value="<%- product_subcategory[0]._id %>" id="sub_cat_id" >
                            <div class="form-group">
                                <label>Sub Category Title</label>
                                <input type="text" name="sub_cat_name" class="form-control sub_category" value="<%- product_subcategory[0].sub_category %>"  placeholder="" required>
                            </div>
                            <div class="form-group">
                                <label>Category</label>
                                <select name="parent_cat" class="form-control parent_cat">
                                    <option value="">Select Category</option>
                                    <% product_categories.forEach(function(category){ %>
                                        <% var select = ""; %>
                                        <% if(category._id == product_subcategory[0].category_id.valueOf()){ %>
                                            <% select = "selected"; %>
                                        <% } %>
                                    <option <%- select %> value="<%- category._id %>"><%- category.category_name %></option>
                                   <%  }) %>
                                </select>
                            </div>
                            <input type="submit" name="sumbit" class="btn add-new" value="Update" />
                        </form>
                        <!-- /Form -->
                    </div>
        </div>
<%- include("footer") -%>
   

